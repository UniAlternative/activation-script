    "esno": "^0.17.0",
    "lint-staged": "^15.2.9",
    "rollup": "^3.29.4",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-ts": "^3.4.5",
    "simple-git-hooks": "^2.11.1",
