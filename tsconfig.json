{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "**/*.js", "**/*.mjs", "**/*.sgmodule", "packages/dashboard/**/*.ts"]
}
